{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@baseloop/*": [
        "./*/src"
      ]
    },
    "target": "esnext",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/node_modules/**",
    "node_modules"
  ]
}
